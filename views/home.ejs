<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="/layout.css" />
  </head>
  <body>
    <div id="app">
      <section class="login-form">
        <h2>What is your name?</h2>
        <div class="message"></div>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Enter your name..."
        />
        <button type="button" class="btn btn-start">Start chat</button>
      </section>
      <main id="chatbox" disabled>
        <aside class="chatbox__sidebar">
          <h3>Online users</h3>
          <ul class="list-users">
            <li class="user">Barox</li>
            <li class="user">Rim</li>
          </ul>
        </aside>
        <section class="chatbox__main">
          <header class="chatbox__header">
            <div class="greeting">
              Hello, <span class="current-user"></span>
              <button type="button" class="btn btn-logout">Logout</button>
            </div>
          </header>
          <main class="chatbox__messages"></main>
          <footer class="chatbox__footer">
            <input
              type="text"
              class="chatbox__input"
              placeholder="Enter your message"
            />
            <button type="button" class="btn btn-send-message">Send</button>
          </footer>
        </section>
      </main>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/socket.io/socket.io.min.js"></script>
    <script src="/main.js"></script>
  </body>
</html>
